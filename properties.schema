{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "required": false,
  "globals": {},
  "properties": {
    "pluginLocations": {
      "type": "object",
      "required": true,
      "properties": {
        "config": {
          "type": "object"
        },
        "contentobject": {
          "type": "object"
        },
        "article": {
          "type": "object"
        },
        "block": {
          "type": "object"
        },
        "component": {
          "type": "object"
        },
        "course": {
          "type": "object",
          "properties": {
            "_intro": {
              "type": "object",
              "required": false,
              "legend": "Intro",
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "default": true,
                  "title": "Enable Intro",
                  "inputType": "Checkbox",
                  "help": "Enable Intro globally"
                },
                "_showOn": {
                  "type": "array",
                  "required": false,
                  "title": "Enter the Content object ID's of pages you would like intro to be shown",
                  "help": "If empty will be shown on all pages.",
                  "items": {
                    "_pageId": {
                      "type": "string",
                      "require": false,
                      "inputType": "Text",
                      "validators": []
                    }
                  }
                },
                "_steps": {
                  "type": "array",
                  "required": false,
                  "title": "Introduction steps",
                  "items": {
                    "type": "object",
                    "required": false,
                    "title": "Items",
                    "properties": {
                      "_element": {
                        "type": "string",
                        "require": false,
                        "title": "Element",
                        "inputType": "Text",
                        "validators": []
                      },
                      "text": {
                        "type": "string",
                        "require": false,
                        "title": "Text that should display here",
                        "inputType": "Text",
                        "validators": [],
                        "translatable": true
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
